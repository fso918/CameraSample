<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="@string/camera_sample"
            android:textSize="@dimen/sp_larger"
            android:id="@+id/camera_sample"
            android:gravity="center"
            android:background="@android:color/darker_gray"
            android:layout_gravity="center_horizontal" />
        <Button
            android:id="@+id/surfaceGame"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="@string/surface_game"
            android:textSize="@dimen/sp_larger"
            android:gravity="center"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="@dimen/dip_15"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/matrix_game"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="@string/game_matrix"
            android:textSize="@dimen/sp_larger"
            android:gravity="center"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="@dimen/dip_15"
            android:layout_gravity="center_horizontal" />
        <Button
            android:id="@+id/refresh_view"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="@string/refresh_view"
            android:textSize="@dimen/sp_larger"
            android:gravity="center"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="@dimen/dip_15"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</LinearLayout>