<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f1f1f1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#e33125"
        android:id="@+id/title_layout">
        <TextView
            android:id="@+id/title"
            style="@style/title_text_style"
            android:text="SurfaceGame"/>

        <ImageView
            android:id="@+id/back"
            style="@style/title_backbtn_style" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <SurfaceView
            android:id="@+id/my_surface_game"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true">
            <TextView
                android:id="@+id/score_tv"
                android:text="得分："
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/selector_white_blue_full"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/move_left"
                android:text="左移"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/selector_white_blue_full"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/move_right"
                android:text="右移"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/selector_white_blue_full"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/speed_acculate"
                android:text="加速"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/selector_white_blue_full"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/turn_shape"
                android:text="变形"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/selector_white_blue_full"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>