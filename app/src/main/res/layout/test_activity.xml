<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/clip_child"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="clip_child"
            android:textSize="@dimen/sp_larger"
            android:gravity="center"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="@dimen/dip_15"
            android:layout_gravity="center_horizontal" />
        <Button
            android:id="@+id/fragment_test"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Fragment"
            android:textSize="@dimen/sp_larger"
            android:gravity="center"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="@dimen/dip_15"
            android:layout_gravity="center_horizontal" />
        <Button
            android:id="@+id/recycler_wrap"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="recycler wrapcontent"
            android:textSize="@dimen/sp_larger"
            android:gravity="center"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="@dimen/dip_15"
            android:layout_gravity="center_horizontal" />
        <Button
            android:id="@+id/date_picker"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Date picker"
            android:textSize="@dimen/sp_larger"
            android:gravity="center"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="@dimen/dip_15"
            android:layout_gravity="center_horizontal" />
        <Button
            android:id="@+id/date_picker_3d"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Date picker 3d"
            android:textSize="@dimen/sp_larger"
            android:gravity="center"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="@dimen/dip_15"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</LinearLayout>